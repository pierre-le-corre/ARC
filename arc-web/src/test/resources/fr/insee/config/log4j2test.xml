<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<!-- APPENDERS LIST -->
	<Appenders>
		<!-- Pour un affichage dans la console -->
		<Console name="Console">
            <PatternLayout pattern="%5p %d{DATE} - - %X{UserID} - %c{1}:%-4L - %m%n" />
        </Console>
	</Appenders>

	<!-- LOGGER LIST -->

	<Loggers>
		<Root level="info">
            <AppenderRef ref="Console" />
        </Root>

	</Loggers>
</Configuration>